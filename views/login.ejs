<%
  var loginEmailError = false;
  var loginPasswordError = false;
  if (locals.loginError[0]) {
    switch(loginError[0].type) {
      case 'email':
        loginEmailError = true;
        break;
      case 'password':
        loginPasswordError = true;
        break;
    }
  }
%>
  <!DOCTYPE html>
  <html lang="en">

  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0" />
    <title>Simantiz - Business Strategy Boardgame</title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="plugins/materialize/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link href="plugins/materialize/css/style.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link href="plugins/sweetalert/sweetalert.css" media="screen" rel="stylesheet" type="text/css">
    <link href="stylesheets/style.css" type="text/css" rel="stylesheet" media="all" />
    <style>
    </style>

    <script src="plugins/jquery-2.1.4.min.js"></script>
    <script src="plugins/materialize/js/materialize.min.js"></script>
    <script src="plugins/materialize/js/init.js"></script>
    <script src="plugins/sweetalert/sweetalert.min.js"></script>
    <style>
      th {
        background-color: #29b6f6;
      }

      td {
        background-color: #b2ebf2;
      }

      #forgot-password:hover {
        text-decoration: underline;
      }

      .line {
        display: block;
        margin-bottom: 10px;
        margin-left: 10.5%;
        margin-right: 10.5%;
        margin-top: 10px;
        overflow: hidden;
        text-align: center;
        white-space: nowrap;
      }

      .line-text:before {
        margin-right: 15px;
        right: 50%;
      }

      .line-text:after {
        left: 50%;
        margin-left: 15px;
      }

      .line-text:before,
      .line-text:after {
        background: #ced0d4;
        content: "";
        height: 1px;
        position: absolute;
        top: 50%;
        width: 9999px;
      }

      .line-text {
        display: inline-block;
        position: relative;
        white-space: nowrap;
        width: 79%;
      }
    </style>

  </head>

  <body class="white">
    <!-- Start Navbar Header -->
    <nav class="indigo darken-4" role="navigation" style="height: 100px; padding-top: 15px">
      <div class="nav-wrapper container">
        <a id="logo-container" href="http://localhost/gims/index.php" class="brand-logo center" style="margin-top: 10px">
          <img src="images/logo2.png" class="l">
        </a>
      </div>
    </nav>
    <!-- End Navbar Header -->
    <div class="container row">
      <div class="section"></div>
      <main>
        <center>
          <div class="section"></div>

          <div class="section"></div>

          <div class="container">
            <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 50px 0px 50px; border: 1px solid #EEE;">

              <h5>
                <b>Sign In</b>
              </h5>
              <form class="col s12" method="post">
                <div class='row'>
                  <div class='col s12'>
                  </div>
                </div>

                <div class='row left-align'>
                  <div class="input-field col s12">
                    <input <%- (loginEmailError)? 'invalid' : '' %> id="login-email" type="email" class="validate <%- (loginEmailError)? 'invalid' : '' %>" <%- (loginEmailError
                      || loginPasswordError)? 'value="'+loginError[0].post.email+ '"' : '' %> name="email">
                    <label for="login-email">Email</label>
                    <% if(loginEmailError){ %>
                      <span id="span-login-email" class="helper-text" data-error="<%- loginError[0].message %>" data-success=""></span>
                      <% } %>
                  </div>
                  <div class="input-field col s12">
                    <input <%- (loginPasswordError)? 'autofocus' : '' %> id="login-password" type="password" class="validate <%- (loginPasswordError)? 'invalid' : '' %>" name="password">
                    <label for="login-password">Enter your password</label>
                    <% if(loginPasswordError){ %>
                      <span id="span-login-password" class="helper-text" data-error="<%- loginError[0].message %>" data-success=""></span>
                      <% } %>
                  </div>
                </div>
                <div class='row'>
                  <button type='submit' name='btn_submit' class='col s12 btn btn-large waves-effect light-blue darken-1 waves-light'>Sign In</button>
                </div>
                <div class="line"><span class="line-text">OR</span></div>
                <div class="row">
                  <a class="green btn btn-flat waves-effect waves-light col s12 white-text" href="/register">Create new Account</a>
                </div>
                <div class="row">
                  <a id="forgot-password" class="light-blue-text" href="/forgot_password">Forgot Password?</a>
                </div>
              </form>
            </div>
          </div>
          <a class="light-blue-text" href="/">Back</a>
        </center>

        <div class="section"></div>
        <div class="section"></div>
      </main>
  </body>
